<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/tv_account_title"
            android:text="Account Options"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tv_account_description"
            android:text="Choose an account you want to use:"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="left|center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv_account_title"/>

    <Button
            android:id="@+id/bt_account_login"
            android:text="Login"
            android:layout_width="250dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_account_description"/>

    <Button
            android:id="@+id/bt_account_player_1"
            android:text="@string/player_1_name"
            android:layout_width="250dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_account_login"/>

    <Button
            android:id="@+id/bt_account_player_2"
            android:text="@string/player_2_name"
            android:layout_width="250dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_account_player_1"/>


</android.support.constraint.ConstraintLayout>